<%- include("partials/header"); -%>
<div style="margin-top: 5rem;" class="container">
  <h2><%=title%></h2>
  <p><%=content%></p>
  
  <div class="mt-4 mb-5">
    <h3 class="mt-5">Comments</h3>
    <div class="container mb-5">
      <div class="row">
       <%   comments.forEach(function(comment){ %>
          <div class="col-md-8">
              <div class="media g-mb-30 media-comment">
                  <img class="d-flex g-width-50 g-height-50 rounded-circle g-mt-3 g-mr-15" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Image Description">
                  <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30" style="padding-top: 15px !important;">
                    <div class="g-mb-15">
                      <h5 class="h5 g-color-gray-dark-v1 mb-0"><%=comment.firstName%></h5>
                      <span class="g-color-gray-dark-v4 g-font-size-12">Just now</span>
                    </div>
              
                    <p><%=comment.opinion%></p>
                  </div>
              </div>
          </div>
        <%  }) %>
      </div>
      </div>
  </div>
  <form action="/post" method="post" class="mb-5 shadow-sm mt-5 p-3 mb-5 bg-white rounded">
    <h3 class="">Leave a comment</h3>
    <div class="form-row" >
      <div class="col-md-4 mb-3">
        <input id="identifier" value="<%= title %>" style="opacity: 0%;" name="label">
        <br>
        <label for="validationDefault01" >First name</label>
        <input type="text" class="form-control" id="validationDefault01" placeholder="Haseeb Ullah" name="name"  required>
      </div>
      <div class="col-md-4 mb-3"><br>
        <label for="validationDefault02" class="mt-1">Last name</label>
        <input type="text" class="form-control" id="validationDefault02" placeholder="Tarakai"  required>
      </div>
      <div class="col-md-4 mb-3"><br>
        <label for="validationDefaultEmail" class="mt-1">Username</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend2">@</span>
          </div>
          <input name="username" type="text" class="form-control" id="validationDefaultUsername" placeholder="Username" aria-describedby="inputGroupPrepend2" required>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="validationDefault03">Your opinion</label>
        <textarea name="comments" type="text" class="form-control" id="validationDefault03" placeholder="Comments here" required></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="form-check">
      </div>
    </div>
    <button class="btn btn-dark" type="submit">GO</button>
  </form>
</div>
<%- include("partials/footer"); -%>
