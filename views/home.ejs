
<%- include("partials/header"); -%>
<div style="margin-bottom: 5rem;">
<img class="wallpaper" src="img/wallpaper.jpg" alt="">
</div>
<div class="container">
  <div>  
  <h1>Home</h1>
    <p> <%= startingContent %> </p>
  </div>

  <%  posts.forEach(function(post){ %>
    <div class="mb-5 shadow-sm mt-5 p-3 mb-5 bg-white rounded">
    <h2 class="mt-3"><%=post.title%></h2>
    <p>
    <%=post.content.substring(0, 600)%>
    <br><a  href="/posts/<%=post.title%>"><span class="btn btn-outline-dark mt-4">Read more</span></a>
    </p>
    <div class="pt-3">
    <a href="#" class="fa fa-facebook"></a>
    <a href="#" class="fa fa-twitter"></a>
    <a href="#" class="fa fa-instagram"></a>
      </div>
    </div>
    <% }) %>
  </div>

<%- include("partials/footer"); -%>
